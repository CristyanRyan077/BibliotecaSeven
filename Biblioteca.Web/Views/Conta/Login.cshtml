@model Biblioteca.Web.ViewModels.LoginViewModel
@section Styles {
    <link rel="stylesheet" href="~/css/Login.css" />
}
@{
    ViewData["MostrarNavbar"] = false;
}
<body>
    <section class="container">
        <div class="login-container">
            <div class="circle circle-one"></div>
            <div class="form-container">
                
                <h1 class="opacity">Login</h1>
                <form method="post">
                    <input type="text" asp-for="Username" placeholder="Usuário" />
                    <input type="password" asp-for="Password" placeholder="Senha" />
                    <button type="submit" class="opacity btn-s">Entrar</button>
                </form>
                <div class="register-forget opacity">
                    <a asp-controller="Conta" asp-action="Registrar"> Registrar</a>
                    <a asp-controller="Conta" asp-action="NovaSenha">Esqueci a senha</a>
                </div>
            </div>
            <div class="circle circle-two"></div>
        </div>
        <div class="theme-btn-container"></div>
    </section>
</body>

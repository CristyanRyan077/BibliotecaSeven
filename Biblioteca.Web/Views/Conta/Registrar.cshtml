@model ControleFinanceiro.Web.Models.RegistrarViewModel
@section Styles {
    <link rel="stylesheet" href="~/css/Login.css" />
}
@{
    ViewData["MostrarNavbar"] = false;
}

<body>
    <section class="container">
        <div class="login-container">
            <div class="circle circle-one"></div>
            <div class="form-container">

                <h1 class="opacity">Registrar</h1>
                <form method="post">
                    <input type="text" asp-for="Username" placeholder="Usuário" />
                    <input type="email" asp-for="Email" placeholder="Email" />
                    <input type="password" asp-for="Password" placeholder="Senha" />
                    <button type="submit" class="opacity btn-s">Entrar</button>
                </form>
                <div class="register-forget opacity">
                    <a asp-controller="Sessao" asp-action="Login"> Login</a>
                </div>
            </div>
            <div class="circle circle-two"></div>
        </div>
        <div class="theme-btn-container"></div>
    </section>
</body>

@model IEnumerable<Biblioteca.Data.Models.Aluguel>

@{
    ViewData["Title"] = "Aluguéis";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Alugueis.css" />
}

<h1>Lista de Aluguéis</h1>

<div class="alugueis-grid">
    @foreach (var aluguel in Model)
    {
        <div class="aluguel-card">
            <div class="aluguel-img">
                <img src="@aluguel.Livro?.ImagemUrl" alt="@aluguel.Livro?.Titulo" />
            </div>
            <div class="aluguel-info">
                <h3>@aluguel.Livro?.Titulo</h3>
                <p><strong>Autor:</strong> @aluguel.Livro?.Autor</p>
                <p><strong>Categoria:</strong> @aluguel.Livro?.Categoria</p>
                <p><strong>Alugado por:</strong> @aluguel.Usuario?.Username</p>
                <p><strong>Data Locação:</strong> @aluguel.DataLocacao.ToString("dd/MM/yyyy")</p>
                <p><strong>Data Devolução Prevista:</strong> @aluguel.DataDevolucaoPrevista.ToString("dd/MM/yyyy")</p>
                @if (aluguel.DataDevolucaoReal != null)
                {
                    <p><strong>Data Devolução Real:</strong> @aluguel.DataDevolucaoReal?.ToString("dd/MM/yyyy")</p>
                }
            </div>
        </div>
    }
</div>
